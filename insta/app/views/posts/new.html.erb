<h2>New Post</h2>
<br>

<%= form_for @post, html: { multipart: true} do |f| %>
  <%= f.label :image %>
  <div class="center-input-parent">
  <%= f.file_field :image, :required => true %>
  </div>
  <br>
  <%= f.label :description %>
  <br>
  <%= f.text_area :description, :required => true %>
  <br> 
  <%= f.submit %>
<% end %>
